<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<div class="container">
    <div class="row justify-content-center">
        <div class="row justify-content-center">
            <div class="col-3 col-sm-3"></div>
            <div class="col-6 col-sm-6">
<% if(datos.length) { %>
    <h1 class="text-primary">Listado Productos</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            <% datos.map(item => { %> 
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.title %></td>
                    <td><%= item.price %></td>
                    <td>
                        <% if(item.thumbnail != "") {%>
                            <img width=50px src="<%= item.thumbnail %>">
                        <% } else { %>
                            <img width=50px src="https://cdn3.iconfinder.com/data/icons/geek-3/24/X-Men_logo_movie_marvel-128.png">
                        <% } %> 
                    </td>
                </tr>
            <% }) %> 
        </tbody>
    </table>
<% } else { %> 
    <h1 class="text-danger">No hay productos :(</h1>
<% } %>
<a href="/" class="btn btn-warning" role="button">Ingresar Producto</a>