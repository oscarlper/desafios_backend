html
    head 
        title="Listado de productos"

        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'    integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    body
        center
            h1(style="color: #0000aa;")='Listado de productos'

            table(style='width:60rem' class='table')
                tr(class="row")
                    th(scope="col table-primary")= 'Id'
                    th(scope="col table-primary")= 'Product'
                    th(scope="col table-primary")= 'Price'
                    th(scope="col table-primary")= 'Image' 
                    each item in datos
                        tr(class="row")
                            td(scope="col")= item.id
                            td(scope="col")= item.title
                            td(scope="col")= item.price
                            td(scope="col")
                                if item.thumbnail != ""
                                    img(src= item.thumbnail style='width:50')
                                else
                                    img(src= 'https://cdn3.iconfinder.com/data/icons/geek-3/24/X-Men_logo_movie_marvel-128.png' style='width:50')
            a(
            role="button"
            class="btn btn-warning"
            href='/'
            )='Ingresa Producto'